{
  "apiVersion": "1",
  "name": "mosm/map-osm",
  "title": "Map OSM",
  "description": "Description of Map OSM.",
  "category": "widgets",
  "keywords": ["hello", "block", "gutenberg", "osm", "map osm"],
  "textdomain": "map-osm",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "cId": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": "Lorem text should be replaced with real text"
    },
    "mapLayout": {
      "type": "object",
      "default": {
        "height": {
          "desktop": "400px",
          "tablet": "300px",
          "mobile": "310px"
        },
        "width": {
          "desktop": "600px",
          "tablet": "500px",
          "mobile": "250px"
        },
        "border": {
          "width": "2px",
          "style": "solid",
          "color": "orangered"
        }
      }
    },
    "mapOsm": {
      "type": "object",
      "default": {
        "latitude": null,
        "longitude": null,
        "zoom": 13,
        "searchQuery": "",
        "markerText": "",
        "mapLayer": "standard",
        "currentLocation": {"lat": null, "lon": null, "popUpText": "", "showedCurrentLocation": false},
        "fromLocation": { "lat": 0, "lon": 0, "locationName": "" },
        "toLocation": { "lat": 0, "lon": 0, "locationName": "" },
        "fromSuggestions": [],
        "toSuggestions": []
      }
    },
    "mapOptions": {
      "type": "object",
      "default": {
        "showDirectionFromYourLocation": false,
        "showPrintButton": true,
        "showImageDownload": false,
        "showPdfDownload": false,
        "showMarkerText": false,
        "getYourLocation": false,
        "allowUsersToSetFromToLocation": false,
        "setSearchLocationOnDblClick": false,
        "showLocationDetailsOnClick": false,
        "printBtnPosition": "topright",
        "controlPosition": "topleft",
        "getLocationControlPosition": "bottomright"
      }
    },
    "osmStyles": {
      "type": "object",
      "default": {
        "currentLocationMarkerColor": "orangered",
        "defaultMarkerColor": "orangered",
        "fromLocationMarkerColor": "red",
        "toLocationMarkerColor": "green",
        "markerIconSize": 35,
        "routeLineColor": "#0025fa"
      }
    },
    "downloadImgBtn": {
      "type": "object",
      "default": {
        "text": "Download as Image"
      }
    },
    "downloadPdfBtn": {
      "type": "object",
      "default": {
        "text": "Download as PDF"
      }
    }
  },

  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "columns": {
        "desktop": 1,
        "tablet": 1,
        "mobile": 1
      }
    }
  },
  "editorScript": "file:./../dist/editor.js"
}
